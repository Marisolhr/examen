
<div class="container">
    {{> header}}
{{> navbar}}
    <h1>P I N T O R E S</h1>
    {{#if pintores}}
    <table class="table table-dark table.hover">
        <thead>
            <tr>
                <td>ID</td>
                <td>Nombre</td>
                <td>Nacionalidad</td>
                <td>Corriente</td>
                <td>Imagen</td>
            </tr>
        </thead>
        <tbody>
        {{#each pintores}}
            <tr>
                <td>{{_id}}</td>
                <td>{{nombre}}</td>
                <td>{{nacionalidad}}</td>
                <td>{{corriente}}</td>
                <td><img src="../images/{{pintura}}"></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{ else}}
        <div>No se encuentran pintores</div>
    {{/if}}
{{> footer}}
</div>
